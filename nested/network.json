{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "wpCommon": {
            "metadata": {
                "description": "Common LAMP values"
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "condition": "[equals(parameters('wpCommon').customVnetId, '')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "vnetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "wpCommon": {
                        "value": "[parameters('wpCommon')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(parameters('wpCommon').baseTemplateUrl,'network-vnet.json',parameters('wpCommon').artifactsSasToken)]"
                }
            }
        },
        {
            "apiVersion": "2019-10-01",
            "condition": "[parameters('wpCommon').ddosSwitch]",
            "dependsOn": [
                "Microsoft.Resources/deployments/vnetTemplate"
            ],
            "name": "ddosTemplate",
            "subscriptionId": "[variables('vnetSub')]",
            "resourceGroup": "[variables('vnetRg')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "wpCommon": {
                        "value": "[parameters('wpCommon')]"
                    },
                    "vnetName": {
                        "value": "[variables('vnetName')]"
                    },
                    "vNetAddressSpace": {
                        "value": "[if(equals(parameters('wpCommon').customVnetId, ''), concat(parameters('wpCommon').vNetAddressSpace,'/16'), reference(parameters('wpCommon').customVnetId, '2017-10-01').addressSpace.addressPrefixes[0])]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(parameters('wpCommon').baseTemplateUrl,'network-vnet-ddos.json',parameters('wpCommon').artifactsSasToken)]"
                }
            },
            "type": "Microsoft.Resources/deployments"
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/vnetTemplate",
                "Microsoft.Resources/deployments/ddosTemplate"
            ],
            "name": "subnetTemplate",
            "subscriptionId": "[variables('vnetSub')]",
            "resourceGroup": "[variables('vnetRg')]",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "wpCommon": {
                        "value": "[parameters('wpCommon')]"
                    },
                    "vnetName": {
                        "value": "[variables('vnetName')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(parameters('wpCommon').baseTemplateUrl,'network-subnets.json',parameters('wpCommon').artifactsSasToken)]"
                }
            }
        },
        {
            "condition": "[parameters('wpCommon').vnetGwDeploySwitch]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').gatewayPublicIPName]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            },
            "tags": {
                "displayName": "Virtual network gateway Public IP"
            }
        },
        {
            "condition": "[parameters('wpCommon').vnetGwDeploySwitch]",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2019-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('wpCommon').gatewayPublicIPName)]",
                "Microsoft.Resources/deployments/subnetTemplate"
            ],
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').gatewayName]",
            "properties": {
                "activeActive": false,
                "enableBgp": false,
                "gatewayType": "[parameters('wpCommon').gatewayType]",
                "ipConfigurations": [
                    {
                        "name": "vnet-Gateway-Config",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('wpCommon').gatewayPublicIPName)]"
                            },
                            "subnet": {
                                "id": "[variables('subnetIdGateway')]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "VpnGw1",
                    "tier": "VpnGw1",
                    "capacity": 2
                },
                "vpnType": "[parameters('wpCommon').vpnType]"
            }
        },
        {
            "condition": "[not(equals(parameters('wpCommon').httpsTermination, 'AppGw'))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "[parameters('wpCommon').lbSku]"
            },
            "apiVersion": "2019-11-01",
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').lbPipName]",
            "properties": {
                "dnsSettings": {
                    "domainNameLabel": "[parameters('wpCommon').lbName]"
                },
                "publicIPAllocationMethod": "Static"
            },
            "tags": {
                "displayName": "Load Balancer Public IP"
            }
        },
        {
            "condition": "[equals(parameters('wpCommon').httpsTermination, 'AppGw')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').appGwPipName]",
            "sku" : {
                "name" : "[if(endswith(parameters('wpCommon').appGwSkuName,'v2'),'Standard','Basic')]"
            },
            "properties": {
                "dnsSettings": {
                    "domainNameLabel": "[parameters('wpCommon').appGwName]"
                },
                "publicIPAllocationMethod": "[if(endswith(parameters('wpCommon').appGwSkuName,'v2'),'Static','Dynamic')]"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-11-01",
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').ctlrPipName]",
            "properties": {
                "dnsSettings": {
                    "domainNameLabel": "[parameters('wpCommon').ctlrPipName]"
                },
                "publicIPAllocationMethod": "Static"
            },
            "tags": {
                "displayName": "Controller VM Public IP"
            }
        },
        {
            "condition": "[not(equals(parameters('wpCommon').httpsTermination, 'AppGw'))]",
            "type": "Microsoft.Network/loadBalancers",
            "sku": {
                "name": "[parameters('wpCommon').lbSku]"
            },
            "apiVersion": "2019-11-01",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/',parameters('wpCommon').lbPipName)]"
            ],
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').lbName]",
            "properties": {
                "backendAddressPools": [
                    {
                        "name": "[parameters('wpCommon').extBeName ]"
                    }
                ],
                "frontendIPConfigurations": [
                    {
                        "name": "[parameters('wpCommon').extFeName ]",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[variables('lbPipID')]"
                            }
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "Http",
                        "properties": {
                            "backendAddressPool": {
                                "id": "[variables('extBeID')]"
                            },
                            "backendPort": 80,
                            "enableFloatingIP": false,
                            "frontendIPConfiguration": {
                                "id": "[variables('extFeID')]"
                            },
                            "frontendPort": 80,
                            "idleTimeoutInMinutes": 5,
                            "probe": {
                                "id": "[variables('extProbeHTTPID')]"
                            },
                            "protocol": "Tcp"
                        }
                    },
                    {
                        "name": "Https",
                        "properties": {
                            "backendAddressPool": {
                                "id": "[variables('extBeID')]"
                            },
                            "backendPort": 443,
                            "enableFloatingIP": false,
                            "frontendIPConfiguration": {
                                "id": "[variables('extFeID')]"
                            },
                            "frontendPort": 443,
                            "idleTimeoutInMinutes": 5,
                            "probe": {
                                "id": "[variables('extProbeHTTPSID')]"
                            },
                            "protocol": "Tcp"
                        }
                    }
                ],
                "probes": [
                    {
                        "name": "[parameters('wpCommon').extProbeHTTP  ]",
                        "properties": {
                            "intervalInSeconds": 5,
                            "numberOfProbes": 3,
                            "port": 80,
                            "protocol": "Tcp"
                        }
                    },
                    {
                        "name": "[parameters('wpCommon').extProbeHTTPS  ]",
                        "properties": {
                            "intervalInSeconds": 5,
                            "numberOfProbes": 3,
                            "port": 443,
                            "protocol": "Tcp"
                        }
                    }
                ]
            }
        },
        {
            "condition": "[equals(parameters('wpCommon').httpsTermination, 'AppGw')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/subnetTemplate",
                "[concat('Microsoft.Network/publicIPAddresses/',parameters('wpCommon').appGwPipName)]"
            ],
            "name": "appGwTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "wpCommon": {
                        "value": "[parameters('wpCommon')]"
                    },
                    "subnetIdAppGw": {
                        "value": "[variables('subnetIdAppGw')]"
                    },
                    "sslCertData": {
                        "reference": {
                            "keyVault": {
                                "id": "[parameters('wpCommon').appGwSslCertKeyVaultResourceId]"
                            },
                            "secretName": "[parameters('wpCommon').appGwSslCertKeyVaultSecretName]"
                        }
                    }
                },
                "templateLink": {
                    "uri": "[concat(parameters('wpCommon').baseTemplateUrl,'appgw.json',parameters('wpCommon').artifactsSasToken)]"
                }
            }
        }
    ],
    "variables": {
        "documentation01": "This sub-template creates a virtual network with a number of subnets and then creates the load-balancer (or an Azure Application Gateway) with public IP/dns",
        "extBeID": "[concat(variables('extLbID'),'/backendAddressPools/',parameters('wpCommon').extBeName)]",
        "extFeID": "[concat(variables('extLbID'),'/frontendIPConfigurations/',parameters('wpCommon').extFeName)]",
        "extLbID": "[resourceId('Microsoft.Network/loadBalancers',parameters('wpCommon').lbName)]",
        "extProbeHTTPID": "[concat(variables('extLbID'),'/probes/',parameters('wpCommon').extProbeHTTP)]",
        "extProbeHTTPSID": "[concat(variables('extLbID'),'/probes/',parameters('wpCommon').extProbeHTTPS)]",
        "lbPipID": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('wpCommon').lbPipName)]",
        "ctlrPipID": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('wpCommon').ctlrPipName)]",
        "customVnetIdArr":              "[split(parameters('wpCommon').customVnetId, '/')]",
        "vnetSub":                      "[if(equals(parameters('wpCommon').customVnetId, ''), subscription().subscriptionId, variables('customVnetIdArr')[2])]",
        "vnetRg":                       "[if(equals(parameters('wpCommon').customVnetId, ''), resourceGroup().name, variables('customVnetIdArr')[4])]",
        "vnetName":                     "[if(equals(parameters('wpCommon').customVnetId, ''), parameters('wpCommon').vnetName, variables('customVnetIdArr')[8])]",
        "customVnetSubnetIdWeb":        "[concat(parameters('wpCommon').customVnetId, '/subnets/', parameters('wpCommon').subnetWeb)]",
        "customVnetSubnetIdSan":        "[concat(parameters('wpCommon').customVnetId, '/subnets/', parameters('wpCommon').subnetSan)]",
        "customVnetSubnetIdRedis":      "[concat(parameters('wpCommon').customVnetId, '/subnets/', parameters('wpCommon').subnetRedis)]",
        "customVnetSubnetIdGateway":    "[concat(parameters('wpCommon').customVnetId, '/subnets/', parameters('wpCommon').subnetGateway)]",
        "customVnetSubnetIdAppGw":      "[concat(parameters('wpCommon').customVnetId, '/subnets/', parameters('wpCommon').subnetAppGw)]",
        "subnetIdWeb":      "[if(equals(parameters('wpCommon').customVnetId, ''), resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), parameters('wpCommon').subnetWeb), variables('customVnetSubnetIdWeb'))]",
        "subnetIdSan":      "[if(equals(parameters('wpCommon').customVnetId, ''), resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), parameters('wpCommon').subnetSan), variables('customVnetSubnetIdSan'))]",
        "subnetIdRedis":    "[if(equals(parameters('wpCommon').customVnetId, ''), resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), parameters('wpCommon').subnetRedis), variables('customVnetSubnetIdRedis'))]",
        "subnetIdGateway":  "[if(equals(parameters('wpCommon').customVnetId, ''), resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), parameters('wpCommon').subnetGateway), variables('customVnetSubnetIdGateway'))]",
        "subnetIdAppGw":    "[if(equals(parameters('wpCommon').customVnetId, ''), resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), parameters('wpCommon').subnetAppGw), variables('customVnetSubnetIdAppGw'))]"
    },
    "outputs": {
        "lbPubIp": {
            "value": "[if(equals(parameters('wpCommon').httpsTermination, 'AppGw'), '0.0.0.0', reference(parameters('wpCommon').lbPipName, '2017-10-01').ipAddress)]",
            "type": "string"
        },
        "ctlrPubIp": {
            "value": "[reference(parameters('wpCommon').ctlrPipName, '2017-10-01').ipAddress]",
            "type": "string"
        },
        "ctlrPubIpId": {
            "value": "[variables('ctlrPipID')]",
            "type": "string"
        },
        "subnetIdWeb": {
            "value": "[variables('subnetIdWeb')]",
            "type": "string"
        },
        "subnetIdSan": {
            "value": "[variables('subnetIdSan')]",
            "type": "string"
        },
        "subnetIdRedis": {
            "value": "[variables('subnetIdRedis')]",
            "type": "string"
        }
    }
}