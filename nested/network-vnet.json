{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "wpCommon": {
            "metadata": {
                "description": "Common WordPress values"
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2017-10-01",
            "location": "[parameters('wpCommon').location]",
            "name": "[parameters('wpCommon').vnetName]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat(parameters('wpCommon').vNetAddressSpace,'/16')]"
                    ]
                }
            }
        }
    ],
    "variables": {
        "documentation01": "This sub-template creates a virtual network when no customer BYO-vnet is specified"
    }
}
