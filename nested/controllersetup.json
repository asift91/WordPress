{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "wpCommon": {
            "metadata": {
                "description": "Common WordPress values"
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2017-03-30",
            "location": "[parameters('wpCommon').location]",
            "name": "[concat(parameters('wpCommon').ctlrVmName,'/','install_wordpress')]",
            "properties": {
                "autoUpgradeMinorVersion": true,
                "publisher": "Microsoft.Azure.Extensions",
                "settings": {
                    "fileUris": [
                        "[variables('scriptUri')]",
                        "[parameters('wpCommon').commonFunctionsScriptUri]"
                    ]
                },
                "protectedSettings":{
                    "commandToExecute": "[concat('bash ', parameters('wpCommon').wordpressInstallScriptFilename, ' ', parameters('wpCommon').wordpressOnAzureConfigsJsonPath)]"
                },
                "type": "CustomScript",
                "typeHandlerVersion": "2.0"
            },
            "tags": {
                "displayName": "install_wordpress"
            }
        }
    ],
    "variables": {
        "documentation01": "This sub-template applies a specific post-deployment script to the controller vm",
        "documentation02": "It expects certain values in the 'common' datastructure.",
        "documentation03": "    scriptLocation              - web URI",
        "documentation04": "    wordpressInstallScriptFilename - name of script file",
        "documentation05": "    siteURL                     - URL of the website",
        "documentation06": "    gfsNameRoot                 - nameroot of gluster farm - note that the code applies a 0 to get to the first node",
        "documentation07": "    ctlrVmName                  - name of the controller/jumpb ox VM",
        "documentation08": "    dbServerType                - postgres or mysql",
        "documentation09": "    wordpressDbName                - database name for wordpress",
        "documentation10": "    wordpressDbUser                - database user for wordpress",
        "documentation11": "    wordpressDbPass                - database password for wordpressDbUser",
        "documentation12": "    wordpressAdminPass             - password for wordpress admin user",
        "documentation13": "    mssqlDbServiceObjectiveName - MS SQL porformance tier.",
        "documentation14": "    mssqlDbEdition              - MS SQL edition tier",
        "documentation15": "    mssqlDbSize                 - MS SQL database size",

        "scriptUri": "[concat(parameters('wpCommon').scriptLocation,parameters('wpCommon').wordpressInstallScriptFilename,parameters('wpCommon').artifactsSasToken)]"
    }
}
